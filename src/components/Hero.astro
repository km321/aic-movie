---
import { Image } from "astro:assets";
import ButtonPrimary from "./ButtonPrimary.astro";
import ButtonSecondary from "./ButtonSecondary.astro";
import heroBg from "../img/herobg.png";
---

<section
    class="relative pt-48 pb-16 lg:pt-56 lg:pb-20 flex items-center justify-center bg-gray-900 text-white"
>
    <div class="absolute inset-0 animate-fade-in">
        <Image
            src={heroBg}
            alt="Background"
            class="w-full h-full object-cover opacity-20"
        />
    </div>

    <div class="relative z-10 text-center px-4 max-w-[900px]">
        <h2
            class="text-lg lg:text-3xl font-bold mb-4 lg:mb-6 animate-zoom-in"
        >
            Streaming Now
        </h2>
        <!-- Main Title -->
        <h1
            class="text-2xl lg:text-6xl font-extrabold mb-6 lg:mb-8 animate-zoom-in [text-shadow:_2px_2px_6px_rgba(0,0,0,0.8)]"
        >
            America's Identity Crisis - A Groundbreaking Documentary
        </h1>

        <!-- CTA Buttons -->
        <div
            class="flex justify-center space-x-4 mb-8"
            data-aos="fade-up"
            data-aos-delay="600"
        >
            <a
                id="watch"
                href="https://watch.aicmovie.com"
                class="watch relative shadow-lg inline-flex items-center justify-start inline-block px-8 py-3 overflow-hidden font-bold transition-all bg-red-600 rounded-full hover:bg-white group"
            >
                <span
                    class="absolute inset-0 border-0 group-hover:border-[25px] ease-linear duration-100 transition-all border-white rounded-full"
                ></span>
                <span
                    class="relative w-full text-left text-white transition-colors duration-200 ease-in-out group-hover:text-red-600"
                    >Watch Now</span
                ></a
            >

            <ButtonSecondary href="#synopsis" text="Synopsis" />
        </div>

        <!-- Embedded Trailer -->
        <div
            class="relative w-full max-w-[900px] mx-auto animate-zoom-in"
            id="trailer"
            style="padding:56.25% 0 0 0;position:relative;"
            data-aos="zoom-in"
            data-aos-delay="900"
        >
            <iframe
                class="rounded-xl shadow-lg"
                src="https://player.vimeo.com/video/960560007?h=99cb6474d1&title=0&byline=0&portrait=0"
                style="position:absolute;top:0;left:0;width:100%;height:100%;"
                frameborder="0"
                allow="autoplay; fullscreen; picture-in-picture"
                allowfullscreen></iframe>
        </div>
    </div>

    <!-- Decorative Bottom Wave -->
    <svg
        class="absolute bottom-0 left-0 w-full text-gray-900"
        xmlns="http://www.w3.org/2000/svg"
        viewBox="0 0 1200 211.2"
        preserveAspectRatio="none"
    >
        <path
            fill="currentColor"
            d="M600 188.4C321.1 188.4 84.3 109.5 0 0v211.2h1200V0c-84.3 109.5-321.1 188.4-600 188.4z"
        ></path>
    </svg>
</section>

<script>
    import AOS from "aos";
    AOS.init({
        duration: 1000,
        once: true,
    });
</script>

<style>
    .animate-fade-in {
        animation: fadeIn 1s ease-out;
    }

    .animate-zoom-in {
        animation: zoomIn 1s ease-out;
    }

    @keyframes fadeIn {
        from {
            opacity: 0;
        }
        to {
            opacity: 1;
        }
    }

    @keyframes zoomIn {
        from {
            transform: scale(0.9);
            opacity: 0;
        }
        to {
            transform: scale(1);
            opacity: 1;
        }
    }
</style>
