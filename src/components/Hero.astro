---
import ButtonPrimary from "./ButtonPrimary.astro";
import ButtonSecondary from "./ButtonSecondary.astro";
import 'aos/dist/aos.css';
---

<section
    class="relative pt-48 pb-12 flex items-center justify-center bg-gray-900 text-white"
>
    <div class="absolute inset-0 animate-fade-in">
        <img
            src="/herobg.png"
            alt="Background"
            class="w-full h-full object-cover opacity-20"
        />
    </div>
    <div class="relative z-10 text-center px-4 max-w-[900px]">
        <h2 class="text-xl mb-4 animate-slide-down">COMING FALL 2024</h2>
        <h1
            class="text-4xl md:text-6xl font-bold mb-4 [text-shadow:_2px_2px_2px_rgb(0_0_0_/_80%)] animate-zoom-in"
        >
            America's Identity Crisis - A Groundbreaking Documentary
        </h1>
        <p class="text-xl mb-8 max-w-2xl mx-auto animate-fade-in" data-aos="fade-up" data-aos-delay="300">
            Stay tuned for the release of "America's Identity Crisis" and join
            us on a journey that promises to redefine our understanding of
            America's past, present, and future.
        </p>
        <div class="space-x-4 mb-8" data-aos="fade-up" data-aos-delay="600">
            <ButtonPrimary href="#get-notified" text="Get Notified" />
            <ButtonSecondary href="#synopsis" text="Synopsis" />
        </div>
        <div
            class="-mb-48 z-50"
            id="trailer"
            style="padding:56.25% 0 0 0;position:relative;"
            data-aos="zoom-in"
            data-aos-delay="900"
        >
            <iframe
                class="rounded-2xl shadow-lg"
                src="https://player.vimeo.com/video/960560007?h=99cb6474d1&title=0&byline=0&portrait=0"
                style="position:absolute;top:0;left:0;width:100%;height:100%;"
                frameborder="0"
                allow="autoplay; fullscreen; picture-in-picture"
                allowfullscreen></iframe>
        </div>
    </div>
    <svg
        class="absolute bottom-0 left-0 w-full text-gray-900"
        xmlns="http://www.w3.org/2000/svg"
        viewBox="0 0 1200 211.2"
        preserveAspectRatio="none"
        ><path
            fill="currentColor"
            d="M600 188.4C321.1 188.4 84.3 109.5 0 0v211.2h1200V0c-84.3 109.5-321.1 188.4-600 188.4z"
        ></path></svg
    >
</section>

<script>
    import AOS from 'aos';
    AOS.init({
        duration: 1000,
        once: true,
    });
</script>

<style>
    .animate-fade-in {
        animation: fadeIn 1s ease-out;
    }

    .animate-slide-down {
        animation: slideDown 1s ease-out;
    }

    .animate-zoom-in {
        animation: zoomIn 1s ease-out;
    }

    .animate-float {
        animation: float 6s ease-in-out infinite;
    }

    @keyframes fadeIn {
        from { opacity: 0; }
        to { opacity: 1; }
    }

    @keyframes slideDown {
        from { transform: translateY(-20px); opacity: 0; }
        to { transform: translateY(0); opacity: 1; }
    }

    @keyframes zoomIn {
        from { transform: scale(0.9); opacity: 0; }
        to { transform: scale(1); opacity: 1; }
    }

    @keyframes float {
        0%, 100% { transform: translateY(0); }
        50% { transform: translateY(-10px); }
    }

</style>