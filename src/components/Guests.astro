---
import ButtonSecondary from "./ButtonSecondary.astro";
import 'aos/dist/aos.css';
import { Image } from "astro:assets";
import MarbleBg from '../img/marblebg.jpg';

// ModernGuestCards.astro
const guests = [
  {
    name: "Dr. Lance Wallnau",
    title: "Speaker and Author",
    image: "https://placehold.jp/250x250.png?text=Guest Photo"
  },
  {
    name: "Dr. Michelle Bachmann",
    title: "Politician and Author",
    image: "https://placehold.jp/250x250.png?text=Guest Photo"
  },
  {
    name: "Alex Newman",
    title: "Journalist and Author",
    image: "https://placehold.jp/250x250.png?text=Guest Photo"
  },
  {
    name: "Greg Hood",
    title: "Speaker and Author",
    image: "https://placehold.jp/250x250.png?text=Guest Photo"
  },
  {
    name: "Dr. John Diamond",
    title: "Speaker and Author",
    image: "https://placehold.jp/250x250.png?text=Guest Photo"
  },
  {
    name: "Kimberly Fletcher",
    title: "Moms For America",
    image: "https://placehold.jp/250x250.png?text=Guest Photo"
  },
  {
    name: "Bill Federer",
    title: "Historian and Author",
    image: "https://placehold.jp/250x250.png?text=Guest Photo"
  }
];
---

<section class="relative py-16 bg-gray-100" id="guests">
  <div class="absolute inset-0">
    <Image
      src={MarbleBg}
      alt="Background"
      class="w-full h-full object-cover opacity-30"
    />
  </div>
  <div class="container mx-auto px-4 relative">
    <h2 class="text-5xl font-bold text-gray-800 mb-4 text-center" data-aos="fade-up">Featured Guests</h2>
    <h3 class="text-xl font-medium text-gray-600 mb-12 text-center max-w-2xl mx-auto" data-aos="fade-up" data-aos-delay="200">
      Meet the experts and patriots who bring America's history to life.
    </h3>
    <div class="grid grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-8 justify-items-center">
      {guests.map((guest, index) => (
          <div class="group relative overflow-hidden rounded-lg shadow-lg transition-all duration-300 hover:shadow-xl" data-aos="fade-up" data-aos-delay={300 + index * 100}>
            <img src={guest.image} alt={guest.name} class="w-full h-72 object-cover object-center transition-all duration-300 group-hover:scale-105" />
            <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/50 to-transparent"></div>
            <div class="absolute bottom-0 left-0 right-0 p-4 text-white">
              <h3 class="text-xl font-bold mb-1">{guest.name}</h3>
              <p class="text-sm mb-2">{guest.title}</p>
              <div class="flex space-x-2 opacity-70 group-hover:opacity-100 transition-opacity duration-300">
                <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 cursor-pointer hover:text-blue-400" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M23 3a10.9 10.9 0 0 1-3.14 1.53 4.48 4.48 0 0 0-7.86 3v1A10.66 10.66 0 0 1 3 4s-4 9 5 13a11.64 11.64 0 0 1-7 2c9 5 20 0 20-11.5a4.5 4.5 0 0 0-.08-.83A7.72 7.72 0 0 0 23 3z"></path></svg>
                <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 cursor-pointer hover:text-blue-600" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"></path></svg>
                <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 cursor-pointer hover:text-blue-700" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"></path><rect x="2" y="9" width="4" height="12"></rect><circle cx="4" cy="4" r="2"></circle></svg>
              </div>
            </div>
          </div>
      ))}
      <div class="group relative overflow-hidden rounded-lg shadow-lg transition-all duration-300 hover:shadow-xl bg-gradient-to-br from-red-500 to-red-800 h-72 w-auto sm:w-72 flex items-center justify-center" data-aos="fade-up" data-aos-delay={300 + guests.length * 100}>
        <div class="text-center text-white p-4">
          <h3 class="text-3xl font-bold mb-2">And Many More</h3>
          <p class="text-lg mb-2">Discover all our amazing guests</p>
          <ButtonSecondary href="#get-notified" text="Get Notified" />
        </div>
      </div>
    </div>
  </div>
</section>